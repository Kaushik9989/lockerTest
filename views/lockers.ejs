<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>NCU12L Locker Control</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      background: #0f172a;
      color: #e5e7eb;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .app-shell {
      max-width: 1200px;
      margin: 0 auto;
      padding: 16px;
    }

    .app-header {
      padding: 10px 0 12px;
    }

    .app-title {
      font-size: 1.6rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .chip {
      font-size: 0.7rem;
      padding: 3px 8px;
      border-radius: 999px;
      background: rgba(34,197,94,0.12);
      border: 1px solid rgba(34,197,94,0.4);
      color: #bbf7d0;
    }

    .card-glass {
      background: radial-gradient(circle at top left, #1f2937, #020617);
      border-radius: 18px;
      border: 1px solid rgba(148,163,184,0.25);
      box-shadow: 0 18px 40px rgba(15,23,42,0.65);
      overflow: hidden;
    }

    .card-body {
      padding: 14px 14px 10px;
    }

    .status-pill {
      padding: 2px 8px;
      border-radius: 99px;
      border: 1px solid rgba(148,163,184,0.7);
      display: inline-flex;
      align-items: center;
      gap: 4px;
      font-size: 0.75rem;
      color: #e5e7eb;
    }

    .status-dot {
      width: 7px;
      height: 7px;
      border-radius: 99px;
      background-color: #22c55e;
    }

    .table {
      margin-bottom: 0;
      border-color: rgba(31,41,55,0.9);
      color: #e5e7eb;
      font-size: 0.85rem;
    }

    .table thead {
      background: rgba(15,23,42,0.95);
    }

    .table thead th {
      border-bottom: 1px solid rgba(55,65,81,0.9);
    }

    .table tbody td {
      border-color: rgba(31,41,55,0.9);
      vertical-align: middle;
    }

    .locker-row {
      cursor: pointer;
      transition: background-color 0.15s ease, transform 0.05s ease;
    }

    .locker-row:hover {
      transform: translateY(-1px);
      background-color: rgba(148,163,184,0.1);
    }

    .locker-row-unlocked {
      background-color: rgba(34,197,94,0.18) !important;   /* green */
    }

    .locker-row-locked {
      background-color: rgba(248,113,113,0.18) !important; /* red */
    }

    .status-text {
      font-weight: 600;
    }

    .status-text-locked {
      color: #fecaca;
    }

    .status-text-unlocked {
      color: #bbf7d0;
    }

    #actionResult {
      min-height: 20px;
      font-size: 0.8rem;
      color: #9ca3af;
    }
  </style>
</head>

<body>
  <div class="app-shell">
    <!-- Header -->
    <header class="app-header">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <div class="app-title">
            NCU12L Locker Control <span class="chip">Tablet Mode</span>
          </div>
          <div class="text-muted small">Tap a row to unlock that locker.</div>
        </div>
        <div class="small text-end">
          Connection: <span id="connState">Unknown</span>
        </div>
      </div>
    </header>

    <!-- Full-page table -->
    <section class="card-glass">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div class="small text-muted">
            Board address + locker index (starting from 1).
          </div>
          <div class="status-pill">
            <span class="status-dot"></span>
            <span>Polling via Socket.IO</span>
          </div>
        </div>

        <div id="actionResult" class="mb-1 small"></div>

        <div class="table-responsive" style="max-height: 520px; overflow-y: auto;">
          <table class="table table-bordered text-center align-middle">
            <thead>
              <tr>
               
                <th style="width: 25%;">Locker</th>
                <th style="width: 50%;">Status</th>
              </tr>
            </thead>
            <tbody id="statusTableBody">
              <% (addresses || []).forEach(addr => { %>
                <% for (let i = 0; i < lockersCount; i++) { %>
                  <tr
                    class="locker-row"
                    data-addr="<%= addr %>"
                    data-locker-index="<%= i %>">
                   
                    <td><%= i + 1 %></td> <!-- display starts from 1 -->
                    <td class="status-cell">+
                      <span class="status-text text-muted">Unknown</span>
                    </td>
                  </tr>
                <% } %>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const connState = document.getElementById("connState");
    const actionResult = document.getElementById("actionResult");
    const rows = document.querySelectorAll(".locker-row");

    // Helper to call API
    async function callAPI(path, data) {
      try {
        const res = await fetch(path, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });
        return res.json();
      } catch (err) {
        return { ok: false, error: "Network error" };
      }
    }

    // When user taps a row → unlock that locker
    rows.forEach((row) => {
      row.addEventListener("click", async () => {
        const addr = Number(row.dataset.addr);
        const lockerIndex = Number(row.dataset.lockerIndex); // 0-based for controller
        const lockerDisplay = lockerIndex + 1; // 1-based for UI

        actionResult.textContent =
          `Sending unlock for 0x${addr.toString(16).toUpperCase()} • Locker ${lockerDisplay}...`;

        const res = await callAPI("/api/locker/unlock", {
          addr,
          compartmentId: lockerIndex,
        });

        if (res.ok) {
          actionResult.textContent =
            `✅ Unlocked 0x${addr.toString(16).toUpperCase()} • Locker ${lockerDisplay}`;
        } else {
          actionResult.textContent = `❌ Error: ${res.error}`;
        }
      });
    });

    // Socket live status handling
    const socket = io();

    socket.on("connect", () => {
      connState.textContent = "Online";
      connState.style.color = "#4ade80";
    });

    socket.on("disconnect", () => {
      connState.textContent = "Offline";
      connState.style.color = "#f87171";
    });

    // Expecting: { addr, status: { Lock_0: 'Locked' | 'Unlocked', ... } }
    socket.on("lockerStatus", ({ addr, status }) => {
      Object.keys(status).forEach((key) => {
        const lockerIndex = Number(key.split("_")[1]); // 0-based
        const lockerDisplay = lockerIndex + 1;

        const row = document.querySelector(
          `.locker-row[data-addr="${addr}"][data-locker-index="${lockerIndex}"]`
        );
        if (!row) return;

        const statusCell = row.querySelector(".status-cell");
        const statusTextEl = statusCell.querySelector(".status-text");
        const state = status[key]; // "Locked" or "Unlocked"

        // Update status text
        statusTextEl.textContent = state;
        statusTextEl.classList.remove("status-text-locked", "status-text-unlocked", "text-muted");

        // Clear previous coloring
// Clear previous colors
row.querySelectorAll("td").forEach(td => {
  td.style.backgroundColor = "";
});

// Apply new color based on state
if (state === "Locked") {
  row.querySelectorAll("td").forEach(td => {
    td.style.backgroundColor = "rgba(248,113,113,0.18)"; // red
  });
  statusTextEl.classList.add("status-text-locked");
} else {
  row.querySelectorAll("td").forEach(td => {
    td.style.backgroundColor = "rgba(34,197,94,0.18)"; // green
  });
  statusTextEl.classList.add("status-text-unlocked");
}

      });
    });
  </script>
</body>
</html>
