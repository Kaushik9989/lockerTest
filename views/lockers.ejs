<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>NCU12L Locker Control</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      background: #0f172a;
      color: #e5e7eb;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .app-shell {
      max-width: 1200px;
      margin: 0 auto;
      padding: 16px;
    }

    .app-header {
      position: sticky;
      top: 0;
      z-index: 10;
      padding: 10px 0 16px;
      background: linear-gradient(to bottom, rgba(15,23,42,0.98), rgba(15,23,42,0.95));
      backdrop-filter: blur(10px);
    }

    .app-title {
      font-size: 1.6rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .chip {
      font-size: 0.7rem;
      padding: 3px 8px;
      border-radius: 999px;
      background: rgba(34,197,94,0.12);
      border: 1px solid rgba(34,197,94,0.4);
      color: #bbf7d0;
    }

    .main-grid {
      display: grid;
      grid-template-columns: minmax(0, 0.9fr) minmax(0, 1.1fr);
      gap: 16px;
      align-items: flex-start;
    }

    @media (max-width: 768px) {
      .main-grid {
        grid-template-columns: 1fr;
      }
    }

    .card-glass {
      background: radial-gradient(circle at top left, #1f2937, #020617);
      border-radius: 18px;
      border: 1px solid rgba(148,163,184,0.25);
      box-shadow: 0 18px 40px rgba(15,23,42,0.65);
      overflow: hidden;
    }

    .card-body {
      padding: 18px;
    }

    .form-select {
      background-color: #020617;
      color: #e5e7eb;
      border-radius: 10px;
      padding: 10px 12px;
      border: 1px solid #4b5563;
    }

    .btn-lg-touch {
      height: 54px;
      font-size: 1rem;
      font-weight: 600;
      border-radius: 999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
      border: none;
    }

    .btn-unlock {
      background: linear-gradient(135deg, #22c55e, #16a34a);
      box-shadow: 0 12px 25px rgba(34,197,94,0.45);
    }

    #actionResult {
      min-height: 22px;
      font-size: 0.8rem;
    }

    .status-pill {
      padding: 2px 8px;
      border-radius: 99px;
      border: 1px solid rgba(148,163,184,0.7);
      display: inline-flex;
      align-items: center;
      gap: 4px;
    }

    .status-dot {
      width: 7px;
      height: 7px;
      border-radius: 99px;
      background-color: #22c55e;
    }

    .status-locked-badge {
      padding: 2px 8px;
      border-radius: 99px;
      font-size: 0.7rem;
      border: 1px solid #f97373;
      background: rgba(248,113,113,0.16);
    }

    .status-unlocked-badge {
      padding: 2px 8px;
      border-radius: 99px;
      font-size: 0.7rem;
      border: 1px solid #4ade80;
      background: rgba(34,197,94,0.18);
    }
  </style>
</head>

<body>
  <div class="app-shell">

    <!-- Header -->
    <header class="app-header">
      <div class="d-flex justify-content-between">
        <div>
          <div class="app-title">
            NCU12L Locker Control <span class="chip">Tablet Mode</span>
          </div>
          <div class="text-muted small">Control and monitor all compartments in real time.</div>
        </div>

        <div class="d-none d-md-block small text-end">
          Connection: <span id="connState">Unknown</span>
        </div>
      </div>
    </header>

    <!-- Main body -->
    <main class="mt-3 main-grid">

      <!-- LEFT PANEL (Controls) -->
      <section class="card-glass">
        <div class="card-body">
          <h6 class="text-uppercase small text-muted">Controls</h6>

          <div class="mb-2 small text-muted">Choose a board address and locker to unlock.</div>

          <div class="row g-3">

            <div class="col-6 col-md-12">
              <label class="form-label">Board Address</label>
              <select id="addrSelect" class="form-select">
                <% (addresses || []).forEach(a => { %>
                  <option value="<%= a %>">0x<%= a.toString(16).toUpperCase().padStart(2, "0") %></option>
                <% }) %>
              </select>
            </div>

            <div class="col-6 col-md-12">
              <label class="form-label">Compartment</label>
              <select id="compartmentSelect" class="form-select">
                <% for (let i = 0; i < lockersCount; i++) { %>
                  <option value="<%= i %>">Locker <%= i %></option>
                <% } %>
              </select>
            </div>

            <!-- Only Unlock Button (Lock removed) -->
            <div class="col-12">
              <button id="unlockBtn" class="btn btn-lg-touch btn-unlock w-100">
                ðŸ”“ Unlock
              </button>
            </div>

          </div>

          <div id="actionResult" class="mt-3 small"></div>
        </div>
      </section>

      <!-- RIGHT PANEL (Status) -->
      <section class="card-glass">
        <div class="card-body">
          <h6 class="text-uppercase small text-muted mb-2">Live Status</h6>

          <div class="d-flex justify-content-between mb-2 small">
            <span>Tap a row to quickly select locker</span>
            <span class="status-pill"><span class="status-dot"></span> Polling</span>
          </div>

          <div class="table-responsive" style="max-height: 420px; overflow-y: auto;">
            <table class="table table-bordered text-center">
              <thead>
                <tr>
                  <th>Addr</th>
                  <th>Locker</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody id="statusTableBody"></tbody>
            </table>
          </div>
        </div>
      </section>

    </main>
  </div>

  <script src="/socket.io/socket.io.js"></script>

  <script>
    const addrSelect = document.getElementById("addrSelect");
    const compartmentSelect = document.getElementById("compartmentSelect");
    const unlockBtn = document.getElementById("unlockBtn");
    const actionResult = document.getElementById("actionResult");
    const statusTableBody = document.getElementById("statusTableBody");
    const connState = document.getElementById("connState");

    const statusMap = {};

    function renderStatusTable() {
      statusTableBody.innerHTML = "";

      const keys = Object.keys(statusMap).sort((a, b) => {
        const [addrA, lockerA] = a.split("-").map(Number);
        const [addrB, lockerB] = b.split("-").map(Number);
        return addrA !== addrB ? addrA - addrB : lockerA - lockerB;
      });

      keys.forEach(key => {
        const { addr, locker, status } = statusMap[key];
        const tr = document.createElement("tr");

        tr.onclick = () => {
          addrSelect.value = addr;
          compartmentSelect.value = locker;
          actionResult.textContent =
            `Selected 0x${addr.toString(16).toUpperCase()} â€¢ Locker ${locker}`;
        };

        const statusBadge = document.createElement("span");
        statusBadge.textContent = status;
        statusBadge.className =
          status === "Locked" ? "status-locked-badge" : "status-unlocked-badge";

        tr.innerHTML = `
          <td>0x${addr.toString(16).toUpperCase()}</td>
          <td>${locker}</td>
        `;
        const tdStatus = document.createElement("td");
        tdStatus.appendChild(statusBadge);
        tr.appendChild(tdStatus);

        statusTableBody.appendChild(tr);
      });
    }

    async function callAPI(path, data) {
      try {
        const res = await fetch(path, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });
        return res.json();
      } catch {
        return { ok: false, error: "Network error" };
      }
    }

    unlockBtn.onclick = async () => {
      const addr = Number(addrSelect.value);
      const compartmentId = Number(compartmentSelect.value);

      actionResult.textContent = "Sending unlock...";
      const res = await callAPI("/api/locker/unlock", { addr, compartmentId });

      actionResult.textContent = res.ok
        ? `âœ… Unlocked 0x${addr.toString(16).toUpperCase()} â€¢ Locker ${compartmentId}`
        : `âŒ Error: ${res.error}`;
    };

    // Socket live status
    const socket = io();
    socket.on("connect", () => { connState.textContent = "Online"; connState.style.color = "#4ade80"; });
    socket.on("disconnect", () => { connState.textContent = "Offline"; connState.style.color = "#f87171"; });

    socket.on("lockerStatus", ({ addr, status }) => {
      Object.keys(status).forEach(key => {
        const locker = key.split("_")[1];
        statusMap[`${addr}-${locker}`] = { addr, locker, status: status[key] };
      });
      renderStatusTable();
    });
  </script>
</body>
</html>
